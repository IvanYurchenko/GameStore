@model GameStore.BLL.Models.CommentModel

@using (Html.BeginForm("NewComment", "Comment", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>New comment</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        @Html.HiddenFor(model => model.GameId)
        @Html.HiddenFor(model => model.ParentCommentId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-lg-1 control-label" })
            <div class="col-lg-3">
                @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Body, new { @class = "col-lg-1 control-label" })
            <div class="col-lg-10 clearfix">
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-2 col-lg-offset-1">
                @Html.ActionLink("To List", "Games", "Game", null, new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-success">Add</button>
            </div>
        </div>
    </fieldset>
}