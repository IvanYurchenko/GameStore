@using System.Web.Optimization
@using BootstrapSupport
@using GameStore.WebUI.Helpers.Layout
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Styles.Url("~/content/css")" rel="stylesheet" />
    @RenderSection("head", required: false)
    @Html.Partial("_html5shiv")
    @* favicons and touch icons go here *@
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="../" class="navbar-brand">GameStore</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="games">
                            Games
                            <span class="badge">@Html.Raw((new LayoutHelper()).GetGamesCount())</span>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="game">
                            <li>@Html.ActionLink("All games", "Games", "Game")</li>
                            <li>@Html.ActionLink("New", "New", "Game")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="games">Publisher <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="publisher">
                            <li>@Html.ActionLink("Publishers", "Publishers", "Publisher")</li>
                            <li>@Html.ActionLink("New", "New", "Publisher")</li>
                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("Basket", "Index", "Basket")
                    </li>
                    </ul>


                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Sign in</a></li>
                    <li><a href="#">Sign up</a></li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container clearfix">
        @Html.Partial("_alerts")
        @Html.Partial("_validationSummary")
        @RenderBody()
        <hr>
        <footer>
            <p>&copy; GameStore @System.DateTime.Now.ToString("yyyy")</p>
        </footer>
    </div>
    @Scripts.Render("~/js")
    @RenderSection("Scripts", required: false)
</body>
</html>
