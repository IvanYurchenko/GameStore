@using GameStore.Resources
@model GameStore.WebUI.ViewModels.Security.RegistrationViewModel

@{
    ViewBag.Title = GlobalRes.Registration;
}
<div class="col-sm-6 col-sm-offset-2 clearfix">
    <div class="">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <fieldset>
                <legend>@ViewBag.Title</legend>

                @Html.EditorForModel()
                
                <div class="form-group">
                    <div class="col-sm-3 col-sm-offset-3">
                        <button type="submit" class="btn btn-primary">@GlobalRes.Register</button>
                    </div>
                </div>
            </fieldset>
    }
    </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
