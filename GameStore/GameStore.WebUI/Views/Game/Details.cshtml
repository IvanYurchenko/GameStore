﻿@model GameStore.WebUI.ViewModels.GameViewModel
@{
    ViewBag.Title = "Details";
}
<div class="well clearfix">
    <fieldset>
        <legend>@Html.DisplayFor(model => model.Name)</legend>
        @if (!Model.IsReadonly)
        {
            if (User != null && (User.IsInRole("Admin") || User.IsInRole("Manager")))
            {
                <p class="clearfix">
                    <div class="col-lg-12">
                        @Html.ActionLink("Edit", "Update", new { key = Model.Key }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Remove", "Remove", new { key = Model.Key }, new { @class = "btn btn-danger" })
                    </div>
                </p>
            }
        }
        <p class="clearfix">
            <div class="col-lg-2">
                <b>@Html.DisplayNameFor(model => model.Name)</b>
            </div>
            <div class="col-lg-10">
                @Html.DisplayFor(model => model.Name)
            </div>
        </p>
        <p class="clearfix">
            <div class="col-lg-2">
                <b>@Html.DisplayNameFor(model => model.Description)</b>
            </div>
            <div class="col-lg-10">
                @Html.DisplayFor(model => model.Description)
            </div>
        </p>
        <p class="clearfix">
            <div class="col-lg-2">
                <b>@Html.DisplayNameFor(model => model.Price)</b>
            </div>
            <div class="col-lg-10">
                @Html.DisplayFor(model => model.Price)
            </div>
        </p>
        <p class="clearfix">
            <div class="col-lg-2">
                <b>@Html.DisplayNameFor(model => model.UnitsInStock)</b>
            </div>
            <div class="col-lg-10">
                @Html.DisplayFor(model => model.UnitsInStock)
            </div>
        </p>
        <p class="clearfix">
            <div class="col-lg-2">
                <b>@Html.DisplayNameFor(model => model.Discontinued)</b>
            </div>
            <div class="col-lg-10">
                @Html.DisplayFor(model => model.Discontinued)
            </div>
        </p>
        
            <p class="clearfix">
                <div class="col-lg-2">
                    <b>@Html.DisplayNameFor(model => model.Publisher)</b>
                </div>
                <div class="col-lg-10">
                    @if (Model.Publisher != null)
                          {
                              @Html.ActionLink((string)Model.Publisher.CompanyName, "Details", "Publisher", new { key = Model.Publisher.CompanyName }, null)
                          }
                    else
                    {
                        <span>
                            Unknown
                        </span>
                    }
                </div>
        
        <hr>
        <p class="clearfix">
            <div class="col-lg-12">
                <span class="pull-left">
                    @if (User != null && User.IsInRole("User"))
                    {
                        @Html.ActionLink("Download", "Download", "Game", new { key = Model.Key }, new { @class = "btn btn-info" })
                    }
                    @Html.ActionLink("Comments", "Comments", "Comment", new { key = Model.Key }, new { @class = "btn btn-primary" })
                </span>
                <span class="pull-right">
                    @if (User != null && User.IsInRole("User"))
                    {
                        @Html.ActionLink("Buy $" + Model.Price.ToString("0.00"), "Add", "Basket", new { key = Model.Key }, new { @class = "btn btn-success" })
                    }
                </span>
            </div>
        </p>
        <p class="clearfix">
            <div class="col-lg-12">

            </div>
        </p>

    </fieldset>
    <hr />
</div>