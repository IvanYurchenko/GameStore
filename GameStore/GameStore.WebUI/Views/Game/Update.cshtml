@model GameStore.WebUI.ViewModels.GameAddUpdateViewModel

@{
    ViewBag.Title = GlobalRes.EditingGame;
}

<h3>@ViewBag.Title</h3>

<div class="well">
    @using (Html.BeginForm("Update", "Game", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        @Html.AntiForgeryToken()
        
        <fieldset>
            <legend>@ViewBag.Title</legend>

            @Html.ValidationSummary()
            @Html.EditorForModel()

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    @Html.ActionLink(GlobalRes.ToList, "Get", "Game", null, new {@class = "btn btn-default"})
                    <button type="submit" class="btn btn-primary">@GlobalRes.Submit</button>
                </div>
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}