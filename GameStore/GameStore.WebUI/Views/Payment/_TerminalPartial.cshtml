@model GameStore.WebUI.ViewModels.Payment.PaymentViewModel

@using (Html.BeginForm("Get", "Payment", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>@ViewBag.Title</legend>

        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.PaymentType)

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentInfoViewModel.TerminalInfo.AccountNumber, new {@class = "col-lg-2 control-label"})
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.PaymentInfoViewModel.TerminalInfo.AccountNumber, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.PaymentInfoViewModel.TerminalInfo.AccountNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentInfoViewModel.TerminalInfo.InvoiceNumber, new {@class = "col-lg-2 control-label"})
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.PaymentInfoViewModel.TerminalInfo.InvoiceNumber, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.PaymentInfoViewModel.TerminalInfo.InvoiceNumber)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                @Html.ActionLink(GlobalRes.BackToOrder, "Get", "Order", null, new {@class = "btn btn-default"})
                <button type="submit" class="btn btn-primary">@GlobalRes.Submit</button>
            </div>
        </div>
    </fieldset>
}