@model GameStore.WebUI.ViewModels.Payment.PaymentViewModel

@using (Html.BeginForm("Get", "Payment", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@ViewBag.Title</legend>
        
        @Html.HiddenFor(m => m.PaymentType)

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentInfoViewModel.VisaInfo.FullName, new {@class = "col-lg-2 control-label"})
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.PaymentInfoViewModel.VisaInfo.FullName, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.PaymentInfoViewModel.VisaInfo.FullName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentInfoViewModel.VisaInfo.CardNumber, new {@class = "col-lg-2 control-label"})
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.PaymentInfoViewModel.VisaInfo.CardNumber, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.PaymentInfoViewModel.VisaInfo.CardNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentInfoViewModel.VisaInfo.Cvc2, new {@class = "col-lg-2 control-label"})
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.PaymentInfoViewModel.VisaInfo.Cvc2, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.PaymentInfoViewModel.VisaInfo.Cvc2)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentInfoViewModel.VisaInfo.Cvv2, new {@class = "col-lg-2 control-label"})
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.PaymentInfoViewModel.VisaInfo.Cvv2, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.PaymentInfoViewModel.VisaInfo.Cvv2)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentInfoViewModel.VisaInfo.ExpirationDate, new {@class = "col-lg-2 control-label"})
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.PaymentInfoViewModel.VisaInfo.ExpirationDate, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.PaymentInfoViewModel.VisaInfo.ExpirationDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                @Html.ActionLink("Back to Order", "Get", "Order", null, new {@class = "btn btn-default"})
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
}