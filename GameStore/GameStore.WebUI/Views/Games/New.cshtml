@model GameStore.BLL.Models.GameModel

@{
    ViewBag.Title = "New";
}

<h2>New</h2>

<div class="well">
    @using (Html.BeginForm("New", "Games", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>New game</legend>

            @Html.EditorForModel()

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    @Html.ActionLink("Back", "Games", "Games", null, new {@class = "btn btn-default"})
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}