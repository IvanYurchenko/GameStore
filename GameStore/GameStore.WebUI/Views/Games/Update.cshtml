@model GameStore.BLL.Models.GameModel

@{
    ViewBag.Title = "Update game";
}

<h2>New</h2>

<div class="well">
    @using (Html.BeginForm("Update", "Games", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)



        <fieldset>
            <legend>New game</legend>

            @Html.HiddenFor(model => model.GameId)

            <div class="form-group">
                @Html.LabelFor(model => model.Key, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Key, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Key)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Price)
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.Discontinued) Discontinued
                        </label>
                        @Html.ValidationMessageFor(model => model.Discontinued)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UnitsInStock, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.UnitsInStock, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UnitsInStock)


                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}