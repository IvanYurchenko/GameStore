@model GameStore.BLL.ViewModels.GameViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class ="well"><fieldset>
                       <legend>New game</legend>

                       @Html.HiddenFor(model => model.GameId)

                       <div class="form-group">
                           @Html.LabelFor(model => model.Key, new {@class = "col-lg-2 control-label"})
                           <div class="col-lg-10">
                               @Html.DisplayFor(model => model.Key, new {@class = "control-label"})
                               @Html.ValidationMessageFor(model => model.Key)
                           </div>
                       </div>


                       <div class="form-group">
                           <div class="col-lg-10 col-lg-offset-2">
                               <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
                               <button type="reset" class="btn btn-default">Cancel</button>
                               <button type="submit" class="btn btn-primary">Submit</button>
                           </div>
                       </div>
                   </fieldset></div>

<p>
    @Html.ActionLink("Edit", "Update", new {id = Model.GameId}) |
    @Html.ActionLink("Back to List", "Index")
</p>