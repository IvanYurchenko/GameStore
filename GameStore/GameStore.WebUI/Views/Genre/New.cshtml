@using GameStore.Resources
@model GameStore.WebUI.ViewModels.GenreAddUpdateViewModel

@{
    ViewBag.Title = GlobalRes.NewGenre;
}

<h2>@ViewBag.Title</h2>

<div class="well">
    @using (Html.BeginForm("New", "Genre", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>@ViewBag.Title</legend>

            @Html.ValidationSummary()
            @Html.EditorForModel()

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    @Html.ActionLink(GlobalRes.ToList, "Get", "Genre", null, new { @class = "btn btn-default" })
                    <button type="submit" class="btn btn-primary">@GlobalRes.Submit</button>
                </div>
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}