@model GameStore.WebUI.ViewModels.GenreViewModel

@{
    ViewBag.Title = "New genre";
}

<h2>@ViewBag.Title</h2>

<div class="well">
    @using (Html.BeginForm("New", "Genre", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>@ViewBag.Title</legend>

            @Html.ValidationSummary(true)
            @Html.EditorForModel()

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    @Html.ActionLink("To List", "Get", "Genre", null, new { @class = "btn btn-default" })
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}